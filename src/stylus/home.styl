// Hero Unit
// ---------
.hero

  height 300px
  padding-top 120px
  border-bottom solid 1px lighten(color_teal_dark, 10%)

  background linear-gradient(top, darken(color_teal_dark, 15%), color_teal_light)

  color color_white
  text-align center

.hero h1
  font-size 48px

.leading
  font-size 24px

// Main Sections
// -------------
.main-sections

  max-width 980px
  height 200px

  margin 30px auto

  display flex
  flex-direction row

  .section
    flex 1 1 auto

  .section h2
    font-size 2em
    text-align center
    font-variant small-caps
